@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <https://inventaris.onroerenderfgoed.be/#> .

#########################
# Aanvrager Shape
#########################

ex:AanvragerShape
    a sh:NodeShape ;
    sh:targetClass ex:aanvrager ;
    sh:property [
        sh:path ex:voornaam ;
        sh:datatype xsd:string ;
        sh:minCount 1 ; 
        sh:maxCount 1 ;     
    ] ;
    sh:property [
        sh:path ex:achternaam ;
        sh:datatype xsd:string ;
        sh:minCount 1 ; 
        sh:maxCount 1 ;     
    ] ;
    sh:property [
        sh:path ex:rijksregisternummer ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;   
    ] ;
    sh:property [
        sh:path ex:straat ;
        sh:datatype xsd:string ;
        sh:minCount 1 ; 
        sh:maxCount 1 ;    
    ] ;
    sh:property [
        sh:path ex:postnummer ;
        sh:datatype xsd:string ;
        sh:minCount 1 ; 
        sh:maxCount 1 ;     
    ] ;
    sh:property [
        sh:path ex:gemeente ;
        sh:datatype xsd:string ;
        sh:minCount 1 ; 
        sh:maxCount 1 ;     
    ] ;
    sh:property [
        sh:path ex:telefoon ;
        sh:datatype xsd:string ;
        sh:minCount 1 ; 
        sh:maxCount 1 ;     
    ] ;
    sh:property [
        sh:path ex:email ;
        sh:datatype xsd:string ;
        sh:pattern "^\\S+@\\S+\\.\\S+$" ;  
        sh:minCount 0 ; 
        sh:maxCount 1 ;     
    ] ;
    sh:property [
        sh:path ex:functieInOrganisatie ;
        sh:datatype xsd:string ;
        sh:minCount 0 ; 
        sh:maxCount 1 ;    
    ] ;
    sh:property [
        sh:path ex:organisatie ;
        sh:datatype xsd:string ;
        sh:minCount 0 ; 
        sh:maxCount 1 ;    
    ] .

